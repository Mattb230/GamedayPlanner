<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/myTicketsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:text="@string/myTickets"
        android:layout_alignLeft="@+id/buyNewTicketButton"
        android:layout_alignRight="@+id/buyNewTicketButton"
        android:layout_alignEnd="@+id/buyNewTicketButton" />

    <Button
        android:id="@+id/buyNewTicketButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"
        android:text="@string/buyNewTickets" />

</RelativeLayout>